<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.banquemisr.challenge05">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.gms.permission.AD_ID"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_tmdb_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_tmdb_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.banquemisr.challenge05.ui.SplashScreenActivity"
                    android:theme="@style/SplashScreenTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.banquemisr.challenge05.ui.TvDetailsActivity" />
        <activity
            android:name="com.banquemisr.challenge05.ui.TvShowActivity"
            android:label="@string/tv_show" />
        <activity
            android:name="com.banquemisr.challenge05.ui.MovieDetailsActivity"
            android:label="@string/Movie_Detail" />
        <activity
            android:name="com.banquemisr.challenge05.ui.MoviesActivity"
            android:label="@string/movies" />

        <activity
            android:name="com.banquemisr.challenge05.ui.MainActivity"
            android:label="@string/app_name"/>
    </application>

</manifest>